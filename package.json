{
  "name": "svelte-chat-app",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev:client": "cd client && npm run build -- --watch",
    "compile:server": "tsc server.ts --esModuleInterop --target esnext --moduleResolution node --watch",
    "dev:server": "concurrently \"npm:compile:server\" \"npm:nodemon\"",
    "nodemon": "nodemon server.js",
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "build:client": "cd client && npm install && npm run build",
    "build:server": "npm install && tsc server.ts --esModuleInterop --target esnext --moduleResolution node",
    "build": "build:server && build:client",
    "start": "node server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.11.19",
    "concurrently": "^7.6.0"
  }
}